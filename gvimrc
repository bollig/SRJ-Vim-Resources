colorscheme kellys

"Hide tool bar
set go-=T
"disable selection with mouse
set selectmode=key

" first font is mac only
set guifont=Menlo:h14,DejaVu\ Sans\ Mono:h14,Bitstream\ Vera\ Sans\ Mono\ 14,Monospace\ 11

" Don't go crazy horizontal
set fuoptions=maxvert

